        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Football"
        mc:Ignorable="d"
        Title="Deleting" Height="151.25" Width="315">
    <Grid Background="#FF2CE22C">
        <Label x:Name="label" Content="Введите название команды" HorizontalAlignment="Left" Margin="10,23,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="176,27,-4,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="button" Content="Удалить" HorizontalAlignment="Left" Margin="10,66,0,0" VerticalAlignment="Top" Width="146" FontSize="18" Click="button_Click"/>
        <Button x:Name="button1" Content="Отмена" HorizontalAlignment="Left" Margin="176,66,0,0" VerticalAlignment="Top" Width="120" FontSize="18" Click="button1_Click"/>

    </Grid>
</Window>
