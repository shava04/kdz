<Window x:Class="Football.Autorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Football"
        mc:Ignorable="d"
        Title="Autorization" Height="300" Width="300">
    <Grid Background="{DynamicResource {x:Static SystemColors.WindowFrameBrushKey}}">
        <Label x:Name="label" Content="Логин" HorizontalAlignment="Left" Margin="64,63,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label1" Content="Пароль" HorizontalAlignment="Left" Margin="64,108,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="loginBox" HorizontalAlignment="Left" Height="23" Margin="147,67,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="autorizationbutton" Content="Авторизоваться" HorizontalAlignment="Left" Margin="10,162,0,0" VerticalAlignment="Top" Width="137" Click="autorizationbutton_Click"/>
        <Button x:Name="exitbutton" Content="Отмена" HorizontalAlignment="Left" Margin="180,162,0,0" VerticalAlignment="Top" Width="75" Click="exitbutton_Click"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="144,113,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
