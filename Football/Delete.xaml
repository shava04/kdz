<Window x:Class="Football.Delete"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Football"
        mc:Ignorable="d"
        Title="Delete" Height="300" Width="300">
    <Grid Background="#FF2CE22C">
        <Label x:Name="label" Content="Введите команду" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" Width="110"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="26" Margin="146,35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="130"/>
        <Button x:Name="button" Content="Удалить" HorizontalAlignment="Left" Margin="10,103,0,0" VerticalAlignment="Top" Width="110" Height="49" FontSize="20" Click="button_Click"/>
        <Button x:Name="button1" Content="Отмена" HorizontalAlignment="Left" Margin="146,103,0,0" VerticalAlignment="Top" Width="130" Height="50" FontSize="20" Click="button1_Click"/>

    </Grid>
</Window>
